#===== Outro exercício: 28 do curso =====

from random import randint
from time import sleep
computador = randint(0, 5)  # faz o computador lembrar
#testar: print('Pensei no número {}'.format(computador))
print('-=-' * 20)
print('Vou pensar em um número entre 0 a 5. Tente adivinhar...')
print('-=-' * 20)
jogador = int(input('Em que número eu pensei? ')) # Jogador tenta adivinhar
print('PROCESSANDO...')
sleep(3)
if jogador == computador:
    print('Parábens! Você conseguiu me vencer!')
else:
    print('Ganhei! Eu pensei no número {} e não no {}'.format(computador, jogador))
    
