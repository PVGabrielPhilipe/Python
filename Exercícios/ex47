#===== Exerc√≠cio: 47 do curso =====
for n in range(1, 51):
    if n % 2 == 0:
        print(n, end = '')
print('Acabou')

#========================
for n in range(1, 51):
    print('.', end = '')
    if n % 2 == 0:
        print(n, end = ' ')
print('Acabou')

#=========================
for n in range(2, 51, 2):
    print('.', end = '')
    print(n, end = ' ')
print('Acabou')

#==========================
for n in range(2, 51, 2):
    print(n, end = ' ')
print('Acabou')
